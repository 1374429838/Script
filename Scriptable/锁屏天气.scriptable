vas.drawImageInRect(await this.getImageByUrl(this.up), new Rect(256, 1994, 30, 30));\n    this.drawText(canvas, 287, 1992, 80, 29, nowWeather.temp.split('C')[0], \"bold\", 29, \"left\");\n    canvas.drawImageInRect(await this.getImageByUrl(this.down), new Rect(337, 1996, 30, 30));\n    this.drawText(canvas, 367, 1992, 80, 29, nowWeather.temp.split('C')[1], \"bold\", 29, \"left\");\n    \n    this.drawText(canvas, 153, 2062, 110, 35, city, \"bold\", 31, \"left\");\n    canvas.drawImageInRect(await this.getImageByUrl(this.refresh), new Rect(278, 2062, 35, 35));\n    const upTime = new Date().toLocaleString('chinese',{hour12:false}).slice(10, 15);\n    this.drawText(canvas, 319, 2060, 125, 30, upTime, \"bold\", 30, \"left\");\n    \n    for(let i = 0; i < 3; i++) {\n      this.drawText(canvas, 538 + i*167, 1878, 90, 40, futureWeather[i].week, \"bold\", 38, \"center\");\n      icon = await this.getIcon(futureWeather[i].weather);\n      canvas.drawImageInRect(icon, new Rect(528+i*167, 1951, 97, 89));\n      this.drawText(canvas, 520+i*168, 2059, 130, 30, futureWeather[i].temp, \"bold\", 30, \"center\");\n    }\n    return canvas.getImage();\n  }\n  \n  \/\/ 取得天气信息\n  getWeatherInfo(){\n    let nowWeather = {}, futureWeather = [], city;\n    let weatherInfo = this.arg;\n    if(weatherInfo) {\n      nowWeather.weather = weatherInfo.weather;\n      nowWeather.temp = weatherInfo.temp;\n      nowWeather.nowTemp = weatherInfo.nowTemp;\n      nowWeather.probability = weatherInfo.probability;\n      \n      weatherInfo.weathers.forEach(function (item, index) {\n        const dates = item.date.split(' ');\n        let json = {};\n        json.week = dates[1].replace('星期', '周');\n        json.weather = item.weather;\n        json.temp = item.temp;\n        json.date = dates[0];\n        futureWeather.push(json);\n      })\n      \/\/ 强制排序\n      futureWeather.sort(function(a, b){return new Date(a.date).getTime() - new Date(b.date).getTime()});\n      city = this.getAddress (weatherInfo.location);\n    } else {\n      nowWeather = {\"weather\":\"大部晴朗\",\"temp\":\"22°C~18°C\",\"nowTemp\":\"19°C\",\"probability\":\"30\"}\n      futureWeather = [\n      {\"week\":\"周二\",\"weather\":\"晴朗无云\",\"temp\":\"11°~32°\"},\n      {\"week\":\"周三\",\"weather\":\"局部多云\",\"temp\":\"22°~34°\"},\n      {\"week\":\"周四\",\"weather\":\"有雪\",\"temp\":\"11°~33°\"}];\n      city = '台湾省';\n    }\n    \n    return {nowWeather, futureWeather, city};\n  }\n  \n  \/\/ 添加设置信息\n  Run() {\n    if (config.runsInApp) {\n      this.registerAction(\"基础设置\", this.setWidgetConfig);\n      this.registerAction(\"快捷指令\", async () => {\n        Safari.open(this.shortcutUrl);\n      }, {name: 'location.circle', color: '#66CD00' });\n    };\n  }\n}\n\/\/ @组件代码结束\nawait Runing(Weather)",
